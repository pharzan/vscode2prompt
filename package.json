{
  "name": "vscode2prompt",
  "displayName": "vscode2prompt",
  "description": "a vscode extension to merge selected files from vscode and put them in a single file ready to be used in chat gpt",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/logo.jpeg",  
  "activationEvents": [
    "onCommand:extension.mergeSelectedFiles",
    "onCommand:extension.mergeOpenTabs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.mergeSelectedFiles",
        "title": "Vscode2Prompt: Select Files and Merge"
      },
      {
        "command": "extension.mergeOpenTabs",
        "title": "Vscode2Prompt: Merge Open Tabs"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
